generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

/// Users of the system
model User {
  id         String     @id @default(uuid())
  name       String
  email      String     @unique
  password   String
  role       String     @default("user") // "user" | "admin"
  imageUrl   String?    // optional profile image URL / path
  createdAt  DateTime   @default(now())
  purchases  Purchase[]
}

/// Sweets / items sold
model Sweet {
  id        String     @id @default(uuid())
  name      String
  category  String
  price     Decimal    @db.Decimal(10,2)
  quantity  Int
  imageUrl  String?    // optional image URL / path
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  purchases Purchase[]
}

/// Purchases (join table)
model Purchase {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  sweet     Sweet    @relation(fields: [sweetId], references: [id])
  sweetId   String
  quantity  Int
  total     Decimal  @db.Decimal(10,2)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([sweetId])
}
